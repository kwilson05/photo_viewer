{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["import", "react", "react-hooks"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": "off",
    "no-unused-vars": "warn",
    "no-extra-boolean-cast": "off",
    "prettier/prettier": "warn"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
